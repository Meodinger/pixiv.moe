  <style>
  .message {
    text-align: center;
    padding: 20px 0;
    color: #999;
  }

  .message p {
    font-size: 15px;
  }
  </style>
  <style>
  #index-loading {
    position: absolute;
    width: 300px;
    height: 100px;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
  }

  #index-loading p {
    font-size: 30px !important;
    margin: 0 !important;
    line-height: 0 !important;
  }
  </style>
